<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameWiki.RegisterPage"
             BackgroundColor= "Black">
    <ContentPage.Content >
        <StackLayout Margin="20" Orientation="Vertical" VerticalOptions="CenterAndExpand" BackgroundColor= "Black" HorizontalOptions="Center">
            <Label Text="Кто таков?" BackgroundColor="Black" TextColor="White" FontSize="25" HorizontalOptions="CenterAndExpand"  Padding="0, 50"></Label>
            <Entry x:Name="EmailForm" Placeholder="Email" BackgroundColor="Gray" TextColor="Black"></Entry>
            <Entry x:Name="LoginForm" Placeholder="Login" BackgroundColor="Gray" TextColor="Black"></Entry>
            <Entry x:Name="PasswordForm" Placeholder="Password" BackgroundColor="Gray" TextColor="Black"></Entry>
            <Entry x:Name="NicknameForm" Placeholder="Nickname" BackgroundColor="Gray" TextColor="Black"></Entry>
            <Button x:Name="RegisterButton" Clicked="RegisterClick" Text="Register" BackgroundColor="Gray" TextColor="Black" Margin="30" CornerRadius="5"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>