<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameWiki.LoginPage"
             BackgroundColor= "Black">
    <ContentPage.Content>
        <StackLayout Margin="20" Orientation="Vertical" VerticalOptions="CenterAndExpand" BackgroundColor= "Black" HorizontalOptions="Center">
            <Label Text="Представься, странник!" BackgroundColor="Black" TextColor="White" FontSize="25" HorizontalOptions="CenterAndExpand"  Padding="0, 50"></Label>
            <Entry x:Name="LoginForm" Placeholder="Login" BackgroundColor="Gray"></Entry>
            <Entry x:Name="PasswordForm" Placeholder="Password" BackgroundColor="Gray"></Entry>
            <Button x:Name="LoginButton" Clicked="LoginClick" Text="Sing in" BackgroundColor="Gray" TextColor="Black" Margin="30" CornerRadius="5" ></Button>
            <Label Text="В первый раз?" BackgroundColor="Black" TextColor="White" FontSize="25" HorizontalOptions="CenterAndExpand" Padding="0, 50, 0, 0"></Label>
            <Button x:Name="RegistrationButton" Clicked="GoToRegisterPageClick" Text="Sing up" BackgroundColor="Gray" TextColor="Black" Margin="30" CornerRadius="5"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>